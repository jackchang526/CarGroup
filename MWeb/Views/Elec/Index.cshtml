@using BitAuto.CarChannel.Model;
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <meta content="yes" name="apple-mobile-web-app-capable" />
    <meta content="black" name="apple-mobile-web-app-status-bar-style" />
    <meta content="telephone=no" name="format-detection" />
    <title>【电动汽车_电动车导购_电动汽车价格_电动汽车排名】-易车网</title>
    <meta name="Keywords" content="电动汽车,电动汽车导购,易车网" />
    <meta name="Description" content="电动汽车:易车网电动汽车频道为您提供全国电动汽车市场的电动汽车经销商最新报价,电动汽车品牌大全,电动车价格,电动车排名,评测内容等,更多电动车信息尽在易车网。" />
    <!--#include file="/ushtml/0000/2017m_yidongzhan_xinnengyuanpindao-1531.shtml"-->
</head>
<body>
    <!-- header start -->
    <div class="op-nav">
        <a id="gobackElm" href="javascript:;" class="btn-return">返回</a>
        <div class="tt-name">
            <a href="http://m.yiche.com/" class="yiche-logo">汽车</a><h1>新能源</h1>
        </div>
        <!--#include file="/include/pd/2016/wap/00001/201607_wap_common_ejdht_Manual.shtml"-->
    </div>
    <div class="op-nav-mark" style="display: none;"></div>
    <!-- header end -->
    <!-- 焦点图 start -->
    <!--#include file="/include/pd/2016/wap/00001/201801_mobile_newenergy_banner_Manual.shtml"-->
    <!-- 焦点图 end -->
    <!-- 图文混排 start  -->
    <div class="tuwen-box">
        <ul>
            <li>
                <a href="/elec/salerank/">
                    <div class="txt-box">
                        <span class="p-name">销量排行</span>
                        <span class="p-txt">@(ViewData["SaleRankYear"])热销TOP榜</span>
                    </div>
                    <span class="tb-img xl-ico"></span>
                </a>
            </li>
            <li>
                <a href="/elec/photolist/">
                    <div class="txt-box">
                        <span class="p-name">无码大图</span>
                        <span class="p-txt">10万+高清车图</span>
                    </div>
                    <span class="tb-img dt-ico"></span>
                </a>
            </li>
            <li>
                <a href="/elec/subsidy/">
                    <div class="txt-box">
                        <span class="p-name">补贴政策</span>
                        <span class="p-txt">全国最新补贴标准</span>
                    </div>
                    <span class="tb-img bt-ico"></span>
                </a>
            </li>
            <li>
                <a href="/elec/chargepile/">
                    <div class="txt-box">
                        <span class="p-name">附近电桩</span>
                        <span class="p-txt">周边充电桩大全</span>
                    </div>
                    <span class="tb-img cdz-ico"></span>
                </a>
            </li>
        </ul>
    </div>

    <!-- 图文混排 end  -->
    <!-- 快速找车 start  -->
    <div class="tit-h2">
        <h2 class="ss-sty">快速找车</h2>
        <div class="more">
            <a href="/elec/selectcar/">更多条件</a>
        </div>
    </div>
    <div class="search-car">
        <div class="tj-box">
            <dl>
                <dt>国别</dt>
                <dd><a href="/elec/selectcarlist?g=1">自主</a></dd>
                <dd><a href="/elec/selectcarlist?g=2">合资</a></dd>
                <dd><a href="/elec/selectcarlist?g=4">进口</a></dd>
            </dl>
            <dl>
                <dt>价格</dt>
                <dd><a href="/elec/selectcarlist?p=0-12">12万以下</a></dd>
                <dd><a href="/elec/selectcarlist?p=12-18">12-18万</a></dd>
                <dd><a href="/elec/selectcarlist?p=18-25">18-25万</a></dd>
                <dd><a href="/elec/selectcarlist?p=25-9999">25万以上</a></dd>
            </dl>
            <dl>
                <dt>续航(km)</dt>
                <dd><a href="/elec/selectcarlist?bl=0-100">100以下</a></dd>
                <dd><a href="/elec/selectcarlist?bl=100-200">100-200</a></dd>
                <dd><a href="/elec/selectcarlist?bl=200-300">200-300</a></dd>
                <dd><a href="/elec/selectcarlist?bl=300-400">300-400</a></dd>
            </dl>
        </div>
        <div class="m-hot-brands">
            <ul>
                <li>
                    <a href="/brandlist/weilaiqiche/">
                        <img src="http://image.bitautoimg.com/bt/car/default/images/logo/masterbrand/png/100/m_266_100.png">
                        <p>蔚来汽车</p>
                    </a>
                </li>
                <li>
                    <a href="/brandlist/beiqixinnengyuan/">
                        <img src="http://image.bitautoimg.com/bt/car/default/images/logo/masterbrand/png/100/m_216_100.png">
                        <p>北汽新能源</p>
                    </a>
                </li>
                <li>
                    <a href="/brandlist/geely/">
                        <img src="http://image.bitautoimg.com/bt/car/default/images/logo/masterbrand/png/100/m_34_100.png">
                        <p>吉利</p>
                    </a>
                </li>
                <li>
                    <a href="/brandlist/bydauto/">
                        <img src="http://image.bitautoimg.com/bt/car/default/images/logo/masterbrand/png/100/m_15_100.png">
                        <p>比亚迪</p>
                    </a>
                </li>
                <li>
                    <a href="/brandlist/tesla/">
                        <img src="http://image.bitautoimg.com/bt/car/default/images/logo/masterbrand/png/100/m_189_100.png">
                        <p>特斯拉</p>
                    </a>
                </li>
            </ul>
            <div class="clear"></div>
        </div>
    </div>

    <!-- 快速找车 end  -->
    <!-- 热门新能源 start  -->
    @{
        string elecResultHtml = ViewData["ElecResultHtml"].ToString();
        string mixElecResultHtml = ViewData["MixElecResultHtml"].ToString();
    }
    @if (!string.IsNullOrEmpty(elecResultHtml) || !string.IsNullOrEmpty(mixElecResultHtml))
    {
        <div class="tit-h2" id="hotelectabs">
            <h2 class="rm-sty">热门新能源</h2>
            <ul>
                @if (!string.IsNullOrEmpty(elecResultHtml))
                {
                    <li data-type="elec"><a href="javascript:;" class="current">纯电动</a></li>
                }
                @if (!string.IsNullOrEmpty(mixElecResultHtml))
                {
                    <li data-type="mixelec"><a href="javascript:;">插电混动</a></li>
                }
            </ul>
        </div>
        <div class="xny-box" id="hotelecboxes">
            <div class="cainixihuan">
                @if (!string.IsNullOrEmpty(elecResultHtml))
                {
                    <ul data-type="elec">@(Html.Raw(elecResultHtml))</ul>
                }
                @if (!string.IsNullOrEmpty(mixElecResultHtml))
                {
                    <ul data-type="mixelec" style="display:@(string.IsNullOrEmpty(elecResultHtml)?"":"none")">@(Html.Raw(mixElecResultHtml))</ul>
                }
            </div>
        </div>
    }
    <!-- 热门新能源 end  -->
    <!-- 新闻列表 start  -->
    <!-- 新闻导航 start  -->
    <div class="news-nav-box">
        <div class="news-nav-box-float">
            <div class="second-tags-scroll-box mgt10">
                <div class="pd15">
                    <div class="second-tags-scroll" id="tabs-news">
                        <ul>
                            <li class="current" data-type="xinwen"><a href="javascript:;"><span>新闻</span></a></li>
                            <li data-type="daogou"><a href="javascript:;"><span>导购</span></a></li>
                            <li data-type="pingce"><a href="javascript:;"><span>测评</span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="right-mask"></div>
            </div>
        </div>
    </div>

    <!-- 新闻导航 end  -->
    <div class="news-lists" id="news-lists">
    </div>
    <a href="javascript:;" class="btn-more-ico btn-add-more-ico" id="moreBtn" style="display:none;">加载更多<i class="iconfont icon-arrowdown"></i></a>
    <div class="load-box" id="load-box">
        <i></i><span>正在载入...</span>
    </div>
    <!-- 新闻列表 end  -->

    <script type="text/javascript" src="//image.bitautoimg.com/uimg/wap/js/jquery-1.8.0.min.js"></script>
    <script type="text/javascript" src="/js/v2/swiper-3.3.1.min.js"></script>
    <script type="text/javascript" src="/js/v2/iscroll.js"></script>
    <script type="text/javascript" src="/js/v2/model.js"></script>
    <script type="text/javascript" src="/js/v2/rightswipe.js"></script>
    <script type="text/javascript" src="/js/v2/underscore.js"></script>

    <script type="text/javascript" src="/js/elec/Index.js"></script>

    <script type="text/javascript">
        GetNewsList.Init();
        InitEvent();
        $(function () {//没有电脑版，临时处理
            var linktopc = $("#a_linkToPcPage");
            $(linktopc).hide().next().hide();
        });
    </script>
    <div class="footer15">
        <!--搜索框-->
        @Html.Partial("~/html/footersearch.cshtml")
        @Html.Partial("~/html/footerV3.cshtml")
    </div>
    <div class="float-r-box">
        <!--#include file="/include/pd/2014/wapCommon/00001/201511_wap_common_ycfd_Manual.shtml"-->
    </div>
</body>
</html>